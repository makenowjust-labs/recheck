{
  "name": "recheck",
  "description": "A vulnerable RegExp (ReDoS) checker for JavaScript (ECMA-262) RegExp.",
  "license": "MIT",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "homepage": "https://makenowjust-labo.github.io/recheck/",
  "repository": "https://github.com/MakeNowJust-Labo/recheck.git",
  "version": "4.1.0",
  "main": "lib/main.js",
  "browser": "lib/browser.js",
  "types": "index.d.ts",
  "keywords": [
    "redos",
    "regexp",
    "security",
    "vulnerability"
  ],
  "scripts": {
    "build": "esbuild --bundle --platform=node --format=cjs src/index.ts --outfile=lib/main.js && esbuild --bundle --platform=browser --format=esm src/fallback.ts --outfile=lib/browser.js",
    "clean": "rimraf lib",
    "format": "prettier -w *.{json,md} src/**/*.ts index.d.ts",
    "lint": "prettier --list-different *.{json,md} src/**/*.ts index.d.ts",
    "typecheck": "tsc --noEmit -p ."
  },
  "files": [
    "lib"
  ],
  "optionalDependencies": {
    "recheck-linux-x64": "4.0.2",
    "recheck-macos-x64": "4.0.2",
    "recheck-windows-x64": "4.0.2"
  },
  "devDependencies": {
    "@types/node": "16.11.11",
    "esbuild": "0.14.1",
    "prettier": "2.5.0",
    "rimraf": "3.0.2",
    "typescript": "4.5.2"
  }
}
