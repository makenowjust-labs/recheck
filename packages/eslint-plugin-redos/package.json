{
  "name": "eslint-plugin-redos",
  "description": "ESLint plugin for catching ReDoS vulnerability.",
  "license": "MIT",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "homepage": "https://makenowjust-labo.github.io/recheck/",
  "repository": "https://github.com/MakeNowJust-Labo/recheck.git",
  "version": "4.1.1",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "format": "prettier -w *.{json,md} src/**/*.ts",
    "lint": "prettier --list-different *.{json,md} src/**/*.ts",
    "test": "jest",
    "typecheck": "tsc --noEmit -p ."
  },
  "dependencies": {
    "recheck": "4.1.1"
  },
  "peerDependencies": {
    "eslint": ">= 3"
  },
  "devDependencies": {
    "@types/eslint": "8.2.1",
    "@types/node": "16.11.14",
    "eslint": "8.4.1",
    "jest": "27.4.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.1",
    "typescript": "4.5.4"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslintplugin",
    "redos",
    "regexp",
    "security"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(src/.*\\.test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/.*"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
