{
  "name": "eslint-plugin-redos",
  "description": "ESLint plugin for catching ReDoS vulnerability.",
  "license": "MIT",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "homepage": "https://makenowjust-labo.github.io/recheck/",
  "repository": "https://github.com/MakeNowJust-Labo/recheck.git",
  "version": "4.1.1",
  "main": "lib/main.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "esbuild --bundle --platform=node --format=cjs src/main.ts --outfile=lib/main.js",
    "clean": "rimraf lib",
    "format": "prettier -w *.{json,md} src/**/*.ts",
    "lint": "prettier --list-different *.{json,md} src/**/*.ts",
    "test": "jest",
    "typecheck": "tsc --noEmit -p ."
  },
  "dependencies": {
    "recheck": "4.1.1"
  },
  "peerDependencies": {
    "eslint": ">= 3"
  },
  "devDependencies": {
    "@types/eslint": "8.2.1",
    "@types/node": "16.11.19",
    "esbuild-jest": "0.5.0",
    "eslint": "8.6.0",
    "jest": "27.4.6",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "typescript": "4.5.4"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslintplugin",
    "redos",
    "regexp",
    "security"
  ]
}
